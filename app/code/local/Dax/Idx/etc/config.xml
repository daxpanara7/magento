<config>
    <modules>
        <Dax_Idx>    
            <version>0.2.0</version>
        </Dax_Idx>
    </modules>
    <frontend>
        <layout>
            <updates>
                <Idx module="Dax_Idx">
                    <file>Dax_Idx.xml</file>
                </Idx>
            </updates>
        </layout>
    </frontend>
    <global>
        <resources>
            <idx_setup>
                <setup>
                    <module>Dax_Idx</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </idx_setup>
            <idx_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </idx_write>
            <idx_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </idx_read>
        </resources>        
        <models>
            <idx>
                <class>Dax_Idx_Model</class>
                <resourceModel>idx_resource</resourceModel>
            </idx>
            <idx_resource>
                <class>Dax_Idx_Model_Resource</class>
                <deprecatedNode>idx_mysql4</deprecatedNode>
                <entities>
                    <idx>
                        <table>import_product_idx</table>
                    </idx>
                </entities>
            </idx_resource>
        </models>
        <blocks>
            <idx>
                <class>Dax_Idx_Block</class>
            </idx>
        </blocks>
        <helpers>
           <idx>
                  <class>Dax_Idx_Helper</class>
            </idx>
        </helpers>
    </global>
    <admin>
        <routers>
            <Idx>
                <use>admin</use>
                <args>
                    <module>Dax_Idx</module>
                    <frontName>idx</frontName>
                </args>
            </Idx>
        </routers>
         <layout>
            <updates>
                <idx>
                    <file>idx.xml</file>
                </idx>
            </updates>
        </layout>
    </admin>
</config>