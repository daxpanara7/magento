<config>
    <modules>
        <Ccc_Practice>
            <version>1.0.0.0</version>                
        </Ccc_Practice>
    </modules>
    <frontend>
        <routers>
            <practice>
                <use>standard</use>
                <args>
                    <module>Ccc_Practice</module>
                    <frontName>practice</frontName>
                </args>
            </practice>
        </routers>
    </frontend>
    <global>
        <models>
            <practice>
                <class>Ccc_Practice_Model</class>
                <resourceModel>practice_resource</resourceModel>
            </practice>
            <practice_resource>
                <class>Ccc_Practice_Model_Resource</class>
                <entities>
                    <practice>
                        <table>product</table>
                    </practice>
                </entities>
            </practice_resource>
        </models>
        <blocks>
            <practice>
                <class>Ccc_Practice_Block</class>
            </practice>
        </blocks>
        <helpers>
            <practice>
                <class>Ccc_Practice_Helper</class>
            </practice>
            <practice>
                  <rewrite>
                      <data>Ccc_Practice_Helper_NewData</data>
                  </rewrite>
            </practice>
        </helpers>
        <events>
            <cms_page_prepare_save>
                <observers>
                    <Ccc_Practice_Model_Observer>
                        <type>singleton</type>
                        <class>Ccc_Practice_Model_Observer</class>
                        <method>saveCmsPageObserve</method>
                    </Ccc_Practice_Model_Observer>
                </observers>
            </cms_page_prepare_save>
        </events>
    </global>
    <admin>
        <routers>
            <practice>
                <use>admin</use>
                <args>
                    <module>Ccc_Practice</module>
                    <frontName>Practice</frontName>
                </args>
            </practice>
            <!-- <adminhtml>
                <args>
                    <modules>
                        <ccc_practice before ='Mage_Adminhtml_Catalog'>Ccc_Practice_Adminhtml</ccc_practice>
                    </modules>
                </args>
            </adminhtml> -->
        </routers>
  </admin>
  <layout>
      <updates>
        <practice>
          <file>practice.xml</file>
        </practice>
      </updates>
    </layout>
</config>
